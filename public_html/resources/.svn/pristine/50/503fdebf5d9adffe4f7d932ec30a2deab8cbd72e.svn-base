/*Caixa Modal*/

.jquery-modalbox .mask {
    position:fixed;
    left:0;
    top:0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color:#000;
    display:none;
    z-index: 5000;
}

.jquery-modalbox .dialog {
    position:fixed;
    left:0;
    top:0;
    display:none;
    z-index:9999;
    padding:20px;
    color: #222;
    font-family:verdana;
    font-size:15px;
    overflow: hidden;
    padding:10px;
    background-color:#ffffff;
    background:rgba(255,255,255,0.9);
    box-shadow: 0px 4px 10px #000;
    -moz-box-shadow: 0px 4px 10px #000;
    -webkit-box-shadow: 0px 4px 10px #000;
    border-radius:5px;
    
}

.jquery-modalbox .window a {color:#333; text-decoration:none}
.jquery-modalbox .window a:hover {color:#ccc; text-decoration:none}

.jquery-modalbox .title{
    display: block;
    float: left;
    font-size: 16px;
}
.jquery-modalbox .dialog-body{
    margin-top: 25px;
    overflow: auto;
    overflow-x: hidden;
}

.jquery-modalbox .close{
    display: block;
    position: absolute;
    top: 2px;
    left: 2px;
    background: url(../img/close.png);
    width:32px;
    height: 32px;
    cursor:pointer;
}
.jquery-modalbox .close:hover{
    background: url(../img/close-hover.png);
}
